<nav class="navbar navbar-light bg-light justify-content-between p-4">
  <a href="" class="navbar-brand">Melbourne Restaurants</a>
  <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-outline-success my-2 my-sm-0" %>
</nav>

<div class="container mt-1">
  <h1><%= @restaurant.name %></h1>
  <div class="d-flex flex-column">
  <p><%= @restaurant.address %></p>
  <p>Phone: <%= @restaurant.phone_number %></p>
  <p>Category: <%= @restaurant.category.capitalize %></p>
  <h2>Reviews:</h2>
  <div class="d-flex flex-column">
    <ul class="list-group">
      <% @restaurant.reviews.each do |review| %>
        <li class="list-group-item">
          <%= review.rating %> stars ///
          <%= review.content %>
          <strong><%= link_to "x",
            review_path(review),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %></strong>
        </li>
      <% end %>
    </ul><br>
  </div>
  <div class="d-flex justify-content-start">
  <%= link_to "Back", restaurants_path, class:"mx-2" %>
  <%= link_to "Edit", edit_restaurant_path(@restaurant), class:"mx-2" %>
  <%= link_to "New review", new_restaurant_review_path(@restaurant), class:"mx-2" %>
  <%= link_to "Delete",
      restaurant_path(@restaurant),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure"},
      class:"mx-2"
      %>
</div>
</div>
</div>
